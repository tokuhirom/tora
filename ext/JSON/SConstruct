import os

env = Environment(
    CCFLAGS=[
        '-I../../src/',
        '-I../../vendor/boost_1_49_0/',
        '-g',
        '-DNDEBUG'
    ],
    LINKFLAGS=[
    ],
    CXXFLAGS=[
        '-std=c++0x'
    ]
)

if os.uname()[0]=='Darwin':
    env.Replace(CXX='clang++', CC='clang')
    env.Append(
        CCFLAGS=[
            '-Wno-unused-function',
            '-DBOOST_NO_CHAR16_T',
            '-DBOOST_NO_CHAR32_T'
        ],
    )
else:
    env.Append(
        CCFLAGS=['-march=native'],
        LINKFLAGS=['-Wl,-Bsymbolic'],
    )

shlib = env.SharedLibrary("lib/libJSON.so", ['json.cc'])
Default(shlib)

env.Command('test', shlib, '../../tora -I lib -I ../../lib/ t/json.tra')
