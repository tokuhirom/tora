use Test::More *;

note("substr"); {
    is("foobar".substr(3), "bar");
    is("foobar".substr(3,2), "ba");
}

note("scan"); {
    is("ablacadabla".scan(/.a/).tora(), ["la","ca","da","la"].tora());
    is("hoge:045-111-2222 boke:045-222-2222".scan(/(\S+):([\d\-]+)/).tora(), [["hoge", "045-111-2222"], ["boke", "045-222-2222"]].tora());
}

done_testing;

