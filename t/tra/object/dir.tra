use Test::More *;

if !-d "t/tmp/" {
    Dir.mkdir("t/tmp/");
}

if -d "t/tmp/foo" {
    Dir.rmdir("t/tmp/foo");
}

ok(!-d 't/tmp/foo');

Dir.mkdir("t/tmp/foo");

ok(-d 't/tmp/foo');

my ($err) = try {
    Dir.rmdir('t/tmp/foo');
};
is($err, undef);

ok(!-d 't/tmp/foo');

Dir.rmdir('t/tmp');

done_testing();

