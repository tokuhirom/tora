use Test::More *;

for (my $i in 1..100) {
    my $n = rand();
    is(typeof($n), 'double');
    ok(0.0 <= $n);
    ok($n <= 1.0);
}

# rand(int)
for (my $i in 1..100) {
    my $n = rand(100);
    is(typeof($n), 'int');
    ok(0 <= $n);
    ok($n <= 100);
}

# rand(double)
for (my $i in 1..100) {
    my $n = rand(100.0);
    is(typeof($n), 'double');
    ok(0.0 <= $n);
    ok($n <= 100.0);
}

done_testing();

