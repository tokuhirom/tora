my $counter = 0;

sub ok($b) {
    ++$counter;
    if ($b) {
        say("ok " + $counter);
    } else {
        say("not ok " + $counter);
    }
}

sub is($a, $b) {
    ++$counter;
    if ($a==$b) {
        say("ok " + $counter);
    } else {
        say("not ok " + $counter);
    }
}

sub done_testing() {
    say("1.." + $counter);
}

